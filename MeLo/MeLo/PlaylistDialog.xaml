<Window x:Class="MeLo.PlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeLo"
        mc:Ignorable="d"
        Title="New playlist" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="195*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" x:Name="newPlaylistTextbox" Height="23" Margin="26,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Grid.ColumnSpan="2"/>
        <Label Content="Enter the desired playlist name:" HorizontalAlignment="Left" Margin="26,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.399,1.747" Grid.ColumnSpan="2"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="23.194,239,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="saveButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="110.194,239,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="cancelButton_Click"/>

    </Grid>
</Window>
